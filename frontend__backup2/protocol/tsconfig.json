{
  "extends": "../tsconfig.json",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "allowImportingTsExtensions": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "noEmit": true
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
